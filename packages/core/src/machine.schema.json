{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "jsonFunction": {
      "type": "object",
      "properties": {
        "$function": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "actionObject": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "exec": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/jsonFunction" }
          ]
        }
      },
      "required": ["type"]
    },
    "stateNode": {
      "type": "object",
      "properties": {
        "entry": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/actionObject"
          }
        },
        "exit": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/actionObject"
          }
        },
        "id": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "initial": {
          "type": "string"
        },
        "invoke": {
          "type": "array"
        },
        "on": {
          "$ref": "#/definitions/transitionsObject"
        },
        "states": {
          "$ref": "#/definitions/statesObject"
        },
        "type": {
          "type": "string",
          "enum": ["atomic", "compound", "parallel", "final"]
        }
      },
      "required": ["id", "type"]
    },
    "atomicStateNode": {
      "type": "object",
      "properties": {
        "entry": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/actionObject"
          }
        },
        "exit": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/actionObject"
          }
        },
        "id": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "invoke": {
          "type": "array"
        },
        "on": {
          "$ref": "#/definitions/transitionsObject"
        },
        "type": {
          "type": "string",
          "pattern": "atomic"
        }
      },
      "required": ["id", "type", "on"]
    },
    "historyStateNode": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "history"
        },
        "history": {
          "type": "string",
          "enum": ["shallow", "deep"]
        }
      },
      "required": ["id", "type", "history"]
    },
    "statesObject": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "oneOf": [
            { "$ref": "#/definitions/stateNode" },
            { "$ref": "#/definitions/atomicStateNode" },
            { "$ref": "#/definitions/historyStateNode" }
          ]
        }
      }
    },
    "transitionsObject": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "actions": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/actionObject"
                }
              },
              "cond": {
                "type": "object"
              },
              "eventType": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "target": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["actions", "eventType", "source", "target"]
          }
        }
      }
    }
  },
  "properties": {
    "id": {
      "title": "ID",
      "type": "string"
    },
    "initial": {
      "type": "string"
    },
    "states": {
      "$ref": "#/definitions/statesObject"
    }
  }
}
