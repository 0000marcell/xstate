{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "mocha",
      "node",
      "core-js"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test/**/*",
    "examples/**/*",
    "editor/node_modules/**/*"
  ]
}
